{
  "name": "emojiworld",
  "version": "1.1.0",
  "description": "An autonomous 2D world simulation with emoji AI citizens.",
  "main": "dist/main.js",
  "scripts": {
    "build": "npx tsc && mkdir -p dist/config && cp src/config/world-config.json dist/config/",
    "start": "npm run build && node dist/main.js",
    "dev": "npx tsc && NODE_OPTIONS='--no-deprecation' node dist/main.js",
