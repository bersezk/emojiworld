{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/world.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/world",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/world.js"
    },
    {
      "src": "/api/world/([^/]+)/tick",
      "methods": ["POST"],
      "dest": "/api/world.js?sessionId=$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
